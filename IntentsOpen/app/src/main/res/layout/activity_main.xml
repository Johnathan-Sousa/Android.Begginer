<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.john.intentsopen.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programar Alarme Rápido" />

        <EditText
            android:id="@+id/hrEditText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:hint="Hora"
            android:inputType="time"
            android:singleLine="false" />

       <EditText
            android:id="@+id/minEditText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="Minutos"
            android:maxLength="2"
            android:inputType="time" />

        <EditText
            android:id="@+id/msgEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Mensagem do Alarme"
            android:maxLength="26"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Alarme"
            android:id="@+id/alarmButton"
            android:onClick="alarmConfig"/>

        <TextView
            android:id="@+id/playerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player de Musica"
            android:layout_marginTop="30px" />

        <Button
            android:id="@+id/musicButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="musicPlayer"
            android:text="Abrir Player" />

        <TextView
            android:id="@+id/mapTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir Mapa"
            android:layout_marginTop="20px"/>

        <Button
            android:id="@+id/mapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mapasOpen"
            android:text="Abrir" />

        <TextView
            android:id="@+id/smsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir SMS"
            android:layout_marginTop="20px"/>

        <Button
            android:id="@+id/smsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="smsOpen"
            android:text="SMS" />

        <TextView
            android:id="@+id/configTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir Configurações"
            android:layout_marginTop="20px"/>

        <Button
            android:id="@+id/configButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="configOpen"
            android:text="Abrir Configurações" />
    </LinearLayout>


</RelativeLayout>
