<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- Entrada -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:textStyle="bold|italic"
        android:text="CADASTRO"
        android:textSize="22dp"
        android:background="@drawable/blue"/>

    <!-- Entrada Nome do Cadastro -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="NOME:"
        android:textStyle="bold"/>

    <EditText
        android:imeOptions="actionNext"
        android:id="@+id/nomeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="áéíóúãõÁÉÍÓÚÃÕâêôÂÊÔabcdefghijklmnopqrstuvwxyzçÇABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:hint="Digite seu Nome e Sobrenome"
        android:inputType="text|textNoSuggestions"
        android:maxLength="25"/>

    <!-- Entrada Email do Cadastro -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-MAIL:"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu E-mail"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"/>

    <!-- Entrada CPF do Cadastro -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF:"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/cpfEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o Número do seu CPF"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="11"/>

    <!-- Entrada SENHA do Cadastro -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENHA"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/senhaEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua Senha de ate 5 Digitos"
        android:inputType="numberPassword"/>

    <!-- BOTAO DE CADASTRO -->
    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="cadastrar"
        android:text="CADASTRAR"/>

</LinearLayout>
